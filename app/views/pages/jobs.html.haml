.container
.row.m-5    
  .col-lg-12.mt-5
    .mx-auto.mt-5{:style => "width: 100%"}
      = form_with(url: pages_jobs_path, method: 'get', local: true) do
        .row{style: "justify-content: center;align-items: baseline;"}
          .form-group.col-md-2.py-2.px-0
            = label_tag :key_search, 'Search for a key search '
            = text_field_tag :key_search, nil, placeholder: 'Eg. ruby on raiils', class: 'form-control'
          .form-group.col-md-2.py-2.px-0
            = label_tag :localization, 'Search for a localization '
            = text_field_tag :localization, nil, placeholder: 'Eg. Germany', class: 'form-control'
          .form-group.col-md-2.py-2.px-0
            = label_tag :skills, 'Search for a skills '
            = text_field_tag :skills, nil, placeholder: 'Eg. full stack', class: 'form-control'
          .form-group.col-md-2.py-2.px-0
            = label_tag :job_type, 'Search for a job_type '
            = text_field_tag :job_type, nil, placeholder: 'Eg. full', class: 'form-control'
          .form-group.col-md-2.py-2.px-0
            = button_tag 'Search', class: 'btn btn-success btn-block'

.container
  .row
    .col-lg-12.mt-5
      %h1 response
      - if params[:key_search]
        %h6.text-bold 
          key search
          = params[:key_search]
      - if params[:localization]
        %h6.text-bold 
          Localization
          = params[:localization]
      - if params[:skills]
        %h6.text-bold 
          Skils
          = params[:skills]
      - if params[:job_type]
        %h6.text-bold 
          Jop Type
          = params[:job_type]
      - if @info
        = @info.each do |job|
          = job[:id]

          .card.text-left
            - if job['company_logo']
              .card-header-image.pb-5{style:"overflow: hidden;"}
                %img(src="#{job['company_logo']}" alt="company_logo")/
            .card-header.card-header-info
              %ul.nav.nav-tabs
                %li.nav-item
                  %a.nav-link.active(href="#0") Active
                %li.nav-item
                  %a.nav-link(href="#0") link
            .card-body
              %h3 
                Type
                = job['type']
              %a{href: "#{job['company_url']}"}= job['company']
              %h3 
                Location:
                = job['location']
              %h5.card-category.card-category-social
                %i.material-icons work
              %h4.card-title

              .card-text= job['description'].html_safe
              %a.btn.btn-primary(href="#{job['url']}") Web
              .card-stats
                
                .author
                  // %a{:href => "#pablo"}
                  //   %img.avatar.img-raised{:alt => "...", :rel => "nofollow", :src => "https://images.unsplash.com/photo-1506794778202-cad84cf45f1d?auto=format&fit=crop&w=334&q=80&ixid=dW5zcGxhc2guY29tOzs7Ozs%3D"}/
                  //   %span Tania Andrew
                .stats.ml-auto
                  %i.material-icons today
                  = job['created_at']