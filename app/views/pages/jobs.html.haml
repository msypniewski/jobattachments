        - if @info.present?
          .card
            .card-header.card-header-primary
              %h4.card-title Search results
              %p.card-category List of registered people
            .card-body.px-3
              .table.table-responsive
                %table.table-sm.table.table-streapd.table-hover.display#table_id
                  %thead.text-primary
                    %tr
                      %th
                  %tbody
                    - @info.each do |job|
                      %tr
                        %td.d-md-flex.search-list-in-table
                          .col-md-9.px-0.mb-3
                            %h3.mb-3.text-primary= job['title']
                            .d-inline-block
                              %span.material-icons location_on
                              %span.align-top= job['location']
                              %span.align-top
                                |
                            .d-inline-block
                              %span.material-icons business
                              %span.align-top= job['company']
                              %span.align-top
                                |
                            .d-inline-block
                              %span.material-icons access_time
                              %span.align-top= job['type']
                              %span.align-top
                                |
                            .mt-5= (job['description']).truncate(200).html_safe
                          
                            %img.img-fluid.d-s-none{style:"max-width:5rem;"}(src="#{job['company_logo']}" alt="")/
                            %a(href="#" style="padding:1rem 1rem 1rem 0;")
                              %span.mt-5.badge.badge-danger= job['created_at']
                          .col-md-3.px-0
                            .d-block
                              = link_to 'Vie & apply', show_job_path(job['id']), class: 'btn btn-primary btn-block'
                              %a(href="#{job['id']}").btn.btn-primary.btn-block 
