.row
  .col-12
    .login-page.bg-whites

      = simple_form_for @address do |f|
        - if @address.errors.any?
          #error_explanation
            %h2= "#{pluralize(@address.errors.count, "error")} prohibited this address from being saved:"
            %ul
              - @address.errors.full_messages.each do |message|
                %li= message
        
        #lookup_field
        =link_to 'Search address by post code', '/', id: 'customButton', class: 'btn btn-primary'
        
        .bmd-form-group
          .form-group
            = f.label :city
            = f.text_field :city, class: "form-control", id:'post_town'
        .bmd-form-group
          .form-group
            = f.label :street
            = f.text_field :street, class: "form-control", id: 'first_line'
        .bmd-form-group
          .form-group
            = f.label :street1
            = f.text_field :street1, class: "form-control", id: 'second_line'
        .bmd-form-group
          .form-group
            = f.label :street2
            = f.text_field :street2, class: "form-control", id: 'third_line'
        
        .bmd-form-group
          .form-group
            = f.label :country
            = f.text_field :country, class: "form-control"
        .bmd-form-group
          .form-group
            = f.label :post_code
            = f.text_field :post_code, class: "form-control", id: 'postcode'
        .actions
          = f.submit 'Save', class: "btn btn-primary"