= form_for @address do |f|
  - if @address.errors.any?
    #error_explanation
      %h2= "#{pluralize(@address.errors.count, "error")} prohibited this address from being saved:"
      %ul
        - @address.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :city
    = f.text_field :city
  .field
    = f.label :street
    = f.text_field :street
  .field
    = f.label :street1
    = f.text_field :street1
  .field
    = f.label :street2
    = f.text_field :street2
  .field
    = f.label :post_code
    = f.text_field :post_code
  .actions
    = f.submit 'Save'
